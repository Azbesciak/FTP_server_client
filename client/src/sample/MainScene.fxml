<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.MainScene">

   <children>
      <BorderPane prefHeight="200.0" prefWidth="200.0">
         <top>
            <HBox minHeight="-Infinity" minWidth="-Infinity" BorderPane.alignment="CENTER" />
         </top>
      </BorderPane>
   </children>
   <top>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
         <Label text="Adres serwera" />
         <TextField fx:id="serverAddress" promptText="adres serwera" />
         <Label text="Port" />
         <TextField fx:id="portNumber" promptText="numer portu" />

         <Button fx:id="connect" mnemonicParsing="false" onMouseClicked="#connectWithServer" prefHeight="47.0" prefWidth="146.0" text="Połącz z serwerem" BorderPane.alignment="CENTER" />
         <opaqueInsets>
            <Insets />
         </opaqueInsets>

      </HBox>
      </top>
   <center>
      <TreeView fx:id="files" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
   </center>
</BorderPane>
